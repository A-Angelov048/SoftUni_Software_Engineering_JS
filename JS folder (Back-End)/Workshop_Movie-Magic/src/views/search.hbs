<section id="search">
    <h1>Search</h1>
    <form action="/search" method="get" class="form">
        <input type="text" class="search" name="title" value="{{title}}" placeholder="Title...">
        <input type="text" class="genre" name="genre" value="{{genre}}" placeholder="Genre...">
        <input type="number" class="year" name="year" value="{{year}}" placeholder="Year...">
        <input type="submit" value="search">
    </form>
</section>

<section id="catalog">
    <div class="band">

        {{#if data}}

        {{> posts}}

        {{else}}

        <div class="no-posts">
            <p class="no-offer">There are no movies matched...</p>
        </div>

        {{/if}}
    </div>
</section>