<section id="details-page">
    <div class="main_card">
        <div class="card_left">
            <div class="card_datails">
                <h1>{{data.title}}</h1>
                <div class="card-movie">
                    <div class="first-info">
                        <p class="card-genre">Genre: {{data.genre}}</p>
                        <p class="card-director">Directror: {{data.director}}</p>
                    </div>
                    <div class="second-info">
                        <p class="card-year">Year: {{data.year}}</p>
                        <p class="card-ranking">Rating: <span id="stars">{{{stars data.rating}}}</span>
                        </p>
                    </div>
                </div>
                <p class="disc">{{data.description}}</p>
            </div>
            <div class="details-btn">
                <button id="edit-button">Edit</button>
                <button id="delete-button">Delete</button>
            </div>
        </div>
        <div class="card_right">
            <img src={{data.imageURL}} alt="image">
        </div>
    </div>
    <div class="main-cast-card">
        {{#each data.casts}}
        <div class="cast-card">
            <div class="card-img">
                <img src={{imageURL}} alt={{name}}>
            </div>
            <div class="cast-info">
                <h1>{{name}}</h1>
                <h3>Age: {{age}}</h3>
                <h3>Born: {{born}}</h3>
                <h3>Name in Movie: {{nameInMovie}}</h3>
            </div>
        </div>
        {{else}}
        <div class="no-cast">
            <p>There are no casts added yet...</p>
        </div>
        {{/each}}
    </div>
</section>